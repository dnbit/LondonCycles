<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#09C">

    <TextView
            android:id="@+id/appwidget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/appwidget_name"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:background="#09C"/>

    <TextView
            android:id="@+id/appwidget_bikes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/bikes"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:background="#09C"/>

    <TextView
            android:id="@+id/appwidget_bikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_name"
            android:layout_toRightOf="@id/appwidget_bikes_label"
            android:layout_toEndOf="@id/appwidget_bikes_label"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:background="#09C"
            tools:text="16"/>

    <TextView
            android:id="@+id/appwidget_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:background="#09C"
            tools:text="5"/>

    <TextView
            android:id="@+id/appwidget_empty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_name"
            android:layout_toStartOf="@id/appwidget_empty"
            android:layout_toLeftOf="@id/appwidget_empty"
            android:text="@string/empty"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:background="#09C"/>

</RelativeLayout>